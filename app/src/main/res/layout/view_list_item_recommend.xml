<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable name="item"
                  type="com.toeii.extensionreadjetpack.entity.HomeRecommendItemListBean"/>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rl_recommend_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10"
    >

        <TextView
                android:id="@+id/group_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_24"
                android:singleLine="true"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:drawablePadding="@dimen/space_5"
                android:text="@{item.data.header.title}"
        />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/group_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_200"
                android:layout_below="@id/group_title_text"
                android:layout_marginTop="@dimen/space_10"
                app:qmui_border_color="@android:color/white"
                app:qmui_border_width="1px"
                app:qmui_corner_radius="@dimen/space_6"
                app:imageUrl="@{item.data.header.icon}"
        />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/theme_icon"
                android:layout_width="@dimen/space_60"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_extension_read"
                app:qmui_border_color="@android:color/white"
                app:qmui_is_circle="true"
                android:layout_below="@id/group_cover"
                android:layout_marginTop="@dimen/space_5"
        />


        <TextView
                android:id="@+id/theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme Title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_20"
                android:singleLine="true"
                android:layout_below="@id/group_cover"
                android:layout_toRightOf="@id/theme_icon"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginTop="@dimen/space_6"
        />

        <TextView
                android:id="@+id/theme_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme Sub Title"
                android:textColor="@color/qmui_config_color_gray_3"
                android:textSize="@dimen/text_size_18"
                android:singleLine="true"
                android:layout_below="@id/theme_title"
                android:layout_toRightOf="@id/theme_icon"
                android:layout_marginLeft="@dimen/space_8"
        />

        <LinearLayout
                android:id="@+id/theme_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/theme_icon"
                android:layout_marginTop="@dimen/space_5"
        >

            <LinearLayout
                    android:id="@+id/theme_layout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        android:id="@+id/theme_list_cover_top"
                        android:layout_width="@dimen/space_180"
                        android:layout_height="@dimen/space_120"
                        android:src="@mipmap/logo_extension_read"
                        app:qmui_border_color="@android:color/white"
                        app:qmui_border_width="1px"
                        app:qmui_corner_radius="@dimen/space_6"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/space_8"
                >

                    <TextView
                            android:id="@+id/theme_list_title_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Theme TitleTheme TitleTheme TitleTheme TitleTheme Title"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_20"
                            android:maxLines="2"
                            android:ellipsize="end"
                    />

                    <TextView
                            android:id="@+id/theme_list_subtitle_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Theme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub Title"
                            android:textColor="@color/qmui_config_color_gray_3"
                            android:textSize="@dimen/text_size_18"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/space_5"
                    />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/theme_layout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/theme_layout_top"
                    android:layout_marginTop="@dimen/space_5"
            >

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        android:id="@+id/theme_list_cover_bottom"
                        android:layout_width="@dimen/space_180"
                        android:layout_height="@dimen/space_120"
                        android:src="@mipmap/logo_extension_read"
                        app:qmui_border_color="@android:color/white"
                        app:qmui_border_width="1px"
                        app:qmui_corner_radius="@dimen/space_6"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/space_8"
                >

                    <TextView
                            android:id="@+id/theme_list_title_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Theme TitleTheme TitleTheme TitleTheme TitleTheme Title"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_20"
                            android:maxLines="2"
                            android:ellipsize="end"
                    />

                    <TextView
                            android:id="@+id/theme_list_subtitle_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Theme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub TitleTheme Sub Title"
                            android:textColor="@color/qmui_config_color_gray_3"
                            android:textSize="@dimen/text_size_18"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/space_5"
                    />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>
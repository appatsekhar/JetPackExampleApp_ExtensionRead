<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_200"
        android:background="@color/app_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="center"
>

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/nav_img"
            android:layout_width="@dimen/space_90"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_extension_read"
            app:qmui_border_color="?attr/qmui_config_color_gray_6"
            app:qmui_border_width="1px"
            app:qmui_is_circle="true"
            app:qmui_selected_border_color="?attr/qmui_config_color_gray_4"
            app:qmui_selected_border_width="1px"
            app:qmui_selected_mask_color="?attr/qmui_config_color_gray_8"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
    />


    <TextView
            android:id="@+id/nav_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_version_name"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="@dimen/text_size_18"
            android:layout_below="@id/nav_img"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_20"
    />

    <TextView
            android:id="@+id/nav_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_app_description"
            android:layout_below="@id/nav_title"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
    />

</RelativeLayout>